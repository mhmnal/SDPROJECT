<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5dc"
    tools:context=".LoginScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="580dp"
            app:cardBackgroundColor="#26495c"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Your Email"
                android:padding="10dp"
                android:fontFamily="@font/gtpressuraregular"
                android:textColorHint="#26495c"/>

            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="130dp"
                android:hint="Your Password"
                android:padding="10dp"
                android:background="@drawable/edittextbg"
                android:fontFamily="@font/gtpressuraregular"
                android:textColorHint="#26495c"/>

                <Button
                    android:width="200dp"
                    android:id="@+id/button"
                    android:layout_marginLeft="20dp"
                    android:text="Login"
                    android:fontFamily="@font/gtpressurabold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/btnbg" />

                <TextView
                    android:id="@+id/registertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="350dp"
                    android:fontFamily="@font/fjord_one"
                    android:text="Register"
                    android:textColor="#e5e5dc"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350dp"
                    android:textColor="#e5e5dc"
                    android:textSize="14sp"
                    android:fontFamily="@font/fjord_one"
                    android:layout_marginLeft="280dp"
                    android:text="Forgot Password"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/playfair_display"
        android:text="Log-In"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>