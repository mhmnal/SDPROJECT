<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1ECC3"
    tools:context=".LoginScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#57837B"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edittextbg"
                    android:fontFamily="@font/gtpressuraregular"
                    android:hint="your email"
                    android:padding="10dp"
                    android:textColorHint="#515E63" />

                <EditText
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/edittextbg"
                    android:fontFamily="@font/gtpressuraregular"
                    android:hint="your password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="#515E63" />

                <Button
                    android:id="@+id/btnlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:width="200dp"
                    android:background="@drawable/btnbg"
                    android:elevation="10dp"
                    android:fontFamily="@font/gtpressurabold"
                    android:text="Login"
                    android:textColor="#F1ECC3" />

                <TextView
                    android:id="@+id/registertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="350dp"
                    android:fontFamily="@font/gtpressurabold"
                    android:text="Register"
                    android:textColor="#C9D8B6"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txtfgtpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="350dp"
                    android:fontFamily="@font/gtpressurabold"
                    android:text="Forgot Password"
                    android:textColor="#C9D8B6"
                    android:textSize="17sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="378dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/beautymountains"
        android:text="Log-In"
        android:textColor="#000000"
        android:textSize="65dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697" />


</androidx.constraintlayout.widget.ConstraintLayout>