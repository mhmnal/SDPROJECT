<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#F1ECC3"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="220dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">


            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittextbg1"
                android:fontFamily="@font/gtpressuraregular"
                android:hint="your name"
                android:padding="10dp"
                android:textColorHint="#F1ECC3" />

            <EditText
                android:id="@+id/etemail1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/edittextbg1"
                android:fontFamily="@font/gtpressuraregular"
                android:hint="your email"
                android:padding="10dp"
                android:textColorHint="#F1ECC3" />

            <EditText
                android:id="@+id/etpassword1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/edittextbg1"
                android:fontFamily="@font/gtpressuraregular"
                android:hint="your password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="#F1ECC3" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="280dp"
                android:width="200dp"
                android:background="@drawable/btnbg"
                android:elevation="10dp"
                android:fontFamily="@font/gtpressurabold"
                android:text="Register"
                android:textColor="#F1ECC3" />

            <TextView
                android:id="@+id/logintxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/gtpressurabold"
                android:text="Login"
                android:textColor="#515E63"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="600dp"
            app:cardBackgroundColor="#57837B"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/txtlogin"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/beautymountains"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="65dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />





        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>